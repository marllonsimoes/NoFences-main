<mah:MetroWindow x:Class="NoFences.View.Canvas.FenceHelpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        mc:Ignorable="d"
        Title="Fence Help &amp; Tips"
        Width="600"
        Height="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        ShowInTaskbar="False"
        GlowBrush="{DynamicResource MahApps.Brushes.Accent}"
        BorderThickness="1"
        SaveWindowPosition="False"
        TitleCharacterCasing="Normal">

    <mah:MetroWindow.Resources>
        <!-- Custom colors matching EditWindow style -->
        <SolidColorBrush x:Key="CustomAccentBrush" Color="#FF00897B"/>
        <SolidColorBrush x:Key="LabelForeground" Color="#FF9E9E9E"/>
        <SolidColorBrush x:Key="SubtleHeaderBrush" Color="#FF607D8B"/>
        <SolidColorBrush x:Key="SubtleBorderBrush" Color="#FFCFD8DC"/>

        <mah:ToUpperConverter x:Key="ToUpperConverter"/>

        <!-- Section header style -->
        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource SubtleHeaderBrush}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,16,0,8"/>
        </Style>

        <!-- Tip item style -->
        <Style x:Key="TipItem" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource LabelForeground}"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="0,4,0,4"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>

        <!-- Keyboard shortcut style -->
        <Style x:Key="ShortcutKey" TargetType="Border">
            <Setter Property="Background" Value="#33607D8B"/>
            <Setter Property="BorderBrush" Value="{StaticResource SubtleBorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="3"/>
            <Setter Property="Padding" Value="6,2"/>
            <Setter Property="Margin" Value="4,0"/>
        </Style>
    </mah:MetroWindow.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header with fence type icon -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,16">
            <iconPacks:PackIconMaterial x:Name="iconFenceType"
                                       Kind="HelpCircle"
                                       Width="32"
                                       Height="32"
                                       Foreground="{StaticResource CustomAccentBrush}"
                                       VerticalAlignment="Center"
                                       Margin="0,0,12,0"/>
            <StackPanel>
                <TextBlock x:Name="txtFenceName"
                          Text="Fence Name"
                          FontSize="18"
                          FontWeight="Bold"
                          Foreground="{StaticResource SubtleHeaderBrush}"/>
                <TextBlock x:Name="txtFenceType"
                          Text="Fence Type"
                          FontSize="12"
                          Foreground="{StaticResource LabelForeground}"
                          Opacity="0.8"/>
            </StackPanel>
        </StackPanel>

        <!-- Scrollable content area -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="contentPanel">
                <!-- Content will be populated dynamically based on fence type -->
            </StackPanel>
        </ScrollViewer>

        <!-- Close button -->
        <Button Grid.Row="2"
                Content="Got it!"
                HorizontalAlignment="Right"
                MinWidth="100"
                Height="32"
                Margin="0,16,0,0"
                Click="BtnClose_Click"
                Style="{StaticResource MahApps.Styles.Button.Square.Accent}"/>
    </Grid>
</mah:MetroWindow>
