<mah:MetroWindow x:Class="NoFences.View.UpdateNotificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        Title="NoFences - Update Available"
        Height="500"
        Width="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        ShowInTaskbar="True"
        Topmost="True"
        GlowBrush="{DynamicResource MahApps.Brushes.Accent}"
        BorderThickness="1"
        TitleCharacterCasing="Normal">

    <!-- Theme synced with Windows system theme via ControlzEx.Theming.ThemeManager -->

    <mah:MetroWindow.Resources>
        <!-- Subtle color brushes -->
        <SolidColorBrush x:Key="SubtleHeaderBrush" Color="#FF607D8B"/>
        <SolidColorBrush x:Key="SubtleBorderBrush" Color="#FFCFD8DC"/>

        <!-- Value converter for uppercase text -->
        <mah:ToUpperConverter x:Key="ToUpperConverter"/>

        <!-- Elegant GroupBox style - subtle and professional -->
        <Style x:Key="ElegantGroupBox" TargetType="GroupBox">
            <Setter Property="Foreground" Value="{StaticResource SubtleHeaderBrush}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="BorderBrush" Value="{StaticResource SubtleBorderBrush}"/>
            <Setter Property="BorderThickness" Value="0,1,0,0"/>
            <Setter Property="Padding" Value="0,8,0,0"/>
            <Setter Property="HeaderTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <TextBlock Text="{Binding Converter={StaticResource ToUpperConverter}}"
                                   Foreground="{StaticResource SubtleHeaderBrush}"
                                   FontSize="11"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,4"
                                   Opacity="0.7"/>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GroupBox">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Header -->
                            <ContentPresenter Grid.Row="0"
                                            ContentSource="Header"
                                            Margin="0,0,0,8"/>

                            <!-- Top border line -->
                            <Border Grid.Row="0"
                                    Height="1"
                                    VerticalAlignment="Top"
                                    Background="{TemplateBinding BorderBrush}"
                                    Opacity="0.3"/>

                            <!-- Content -->
                            <ContentPresenter Grid.Row="1"
                                            Margin="{TemplateBinding Padding}"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </mah:MetroWindow.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header with icon -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
            <iconPacks:PackIconMaterial x:Name="UpdateIcon"
                                       Kind="Update"
                                       Width="48"
                                       Height="48"
                                       VerticalAlignment="Center"
                                       Margin="0,0,15,0" />
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="Update Available"
                          FontSize="24"
                          FontWeight="Bold"
                          Margin="0,0,0,5" />
                <TextBlock x:Name="SubtitleText"
                          Text="A new version of NoFences is ready to download"
                          FontSize="14"
                          Opacity="0.7" />
            </StackPanel>
        </StackPanel>

        <!-- Version information -->
        <Border Grid.Row="1"
                CornerRadius="5"
                Padding="15"
                Margin="0,0,0,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- Current Version -->
                <TextBlock Grid.Row="0" Grid.Column="0"
                          Text="Current Version:"
                          FontWeight="SemiBold"
                          Margin="0,0,0,5" />
                <TextBlock Grid.Row="1" Grid.Column="0"
                          x:Name="CurrentVersionText"
                          Text="1.6.0.0"
                          FontSize="16"
                          Margin="0,0,0,10" />

                <!-- New Version -->
                <TextBlock Grid.Row="0" Grid.Column="1"
                          Text="New Version:"
                          FontWeight="SemiBold"
                          Margin="0,0,0,5" />
                <TextBlock Grid.Row="1" Grid.Column="1"
                          x:Name="NewVersionText"
                          Text="1.7.0.0"
                          FontSize="16"
                          Margin="0,0,0,10" />

                <!-- Release Info -->
                <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal">
                    <iconPacks:PackIconMaterial Kind="Calendar"
                                               Width="16"
                                               Height="16"
                                               VerticalAlignment="Center"
                                               Margin="0,0,5,0"
                                               Opacity="0.7" />
                    <TextBlock x:Name="ReleaseDateText"
                              Text="Released: January 1, 2025"
                              VerticalAlignment="Center"
                              Margin="0,0,20,0"
                              Opacity="0.7" />

                    <iconPacks:PackIconMaterial Kind="FileDownload"
                                               Width="16"
                                               Height="16"
                                               VerticalAlignment="Center"
                                               Margin="0,0,5,0"
                                               Opacity="0.7" />
                    <TextBlock x:Name="FileSizeText"
                              Text="Size: 15.2 MB"
                              VerticalAlignment="Center"
                              Opacity="0.7" />
                </StackPanel>
            </Grid>
        </Border>

        <!-- Release Notes -->
        <GroupBox Grid.Row="2"
                  Header="Release Notes"
                  Style="{StaticResource ElegantGroupBox}"
                  Margin="0,0,0,20">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <TextBlock x:Name="ReleaseNotesText"
                          Text="Loading release notes..."
                          TextWrapping="Wrap"
                          Padding="10"
                          FontFamily="Consolas"
                          FontSize="12" />
            </ScrollViewer>
        </GroupBox>

        <!-- Action buttons -->
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- Critical update warning -->
            <StackPanel Grid.Column="0"
                       x:Name="CriticalWarningPanel"
                       Orientation="Horizontal"
                       VerticalAlignment="Center"
                       Visibility="Collapsed">
                <iconPacks:PackIconMaterial Kind="Alert"
                                           Width="20"
                                           Height="20"
                                           Foreground="#FF6B6B"
                                           VerticalAlignment="Center"
                                           Margin="0,0,5,0" />
                <TextBlock Text="Critical security update"
                          Foreground="#FF6B6B"
                          FontWeight="SemiBold"
                          VerticalAlignment="Center" />
            </StackPanel>

            <!-- Download button -->
            <Button Grid.Column="1"
                    x:Name="DownloadButton"
                    Content="Download Update"
                    Width="150"
                    Height="35"
                    Margin="0,0,10,0"
                    Click="DownloadButton_Click">
                <Button.ContentTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:PackIconMaterial Kind="Download"
                                                       Width="16"
                                                       Height="16"
                                                       VerticalAlignment="Center"
                                                       Margin="0,0,5,0" />
                            <TextBlock Text="Download Update" VerticalAlignment="Center" />
                        </StackPanel>
                    </DataTemplate>
                </Button.ContentTemplate>
            </Button>

            <!-- Later button -->
            <Button Grid.Column="2"
                    x:Name="LaterButton"
                    Content="Remind Me Later"
                    Width="150"
                    Height="35"
                    Click="LaterButton_Click" />
        </Grid>
    </Grid>
</mah:MetroWindow>
