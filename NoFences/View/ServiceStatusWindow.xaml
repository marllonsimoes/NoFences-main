<mah:MetroWindow x:Class="NoFences.View.ServiceStatusWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        Title="NoFences Service Status"
        Height="500" Width="700"
        WindowStartupLocation="CenterScreen">

    <mah:MetroWindow.Resources>
        <Style x:Key="FeatureCardStyle" TargetType="Border">
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
    </mah:MetroWindow.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
            <iconPacks:PackIconMaterial Kind="CloudSync" Width="32" Height="32"/>
            <TextBlock Text="NoFences Service" FontSize="24" FontWeight="Bold"
                      Margin="10,0,0,0" VerticalAlignment="Center"/>
        </StackPanel>

        <!-- Service Status -->
        <Border Grid.Row="1" Style="{StaticResource FeatureCardStyle}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <iconPacks:PackIconMaterial x:Name="ServiceIcon" Kind="ServerNetwork"
                                          Width="40" Height="40"/>

                <StackPanel Grid.Column="1" Margin="15,0,0,0" VerticalAlignment="Center">
                    <TextBlock x:Name="ServiceStatusText" Text="Checking service..."
                              FontSize="16" FontWeight="SemiBold"/>
                    <TextBlock x:Name="ServiceVersionText" Text=""
                              FontSize="12"
                              Margin="0,5,0,0"/>
                </StackPanel>

                <Button x:Name="RefreshButton" Grid.Column="2" Content="Refresh"
                      
                       Width="100" Click="RefreshButton_Click"/>
            </Grid>
        </Border>

        <!-- Features List -->
        <ScrollViewer Grid.Row="2" Margin="0,20,0,0" VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="FeaturesItemsControl">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{StaticResource FeatureCardStyle}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Feature Icon -->
                                <iconPacks:PackIconMaterial Width="32" Height="32"
                                                          Grid.RowSpan="2"
                                                          VerticalAlignment="Center">
                                    <iconPacks:PackIconMaterial.Style>
                                        <Style TargetType="iconPacks:PackIconMaterial">
                                            <Setter Property="Kind" Value="Cog"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding State}" Value="Running">
                                                    <Setter Property="Kind" Value="CheckCircle"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding State}" Value="Error">
                                                    <Setter Property="Kind" Value="AlertCircle"/>
                                                    <Setter Property="Foreground" Value="#E74C3C"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </iconPacks:PackIconMaterial.Style>
                                </iconPacks:PackIconMaterial>

                                <!-- Feature Info -->
                                <StackPanel Grid.Column="1" Margin="15,0,0,0">
                                    <TextBlock Text="{Binding DisplayName}" FontSize="14" FontWeight="SemiBold"/>
                                    <TextBlock Text="{Binding Description}"
                                              FontSize="11" 
                                              Margin="0,3,0,0" TextWrapping="Wrap"/>
                                </StackPanel>

                                <!-- State Badge -->
                                <Border Grid.Column="2" Grid.Row="0"
                                       CornerRadius="10" Padding="8,3"
                                       VerticalAlignment="Center" Margin="10,0,0,0">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding State}" Value="Running">
                                                    <Setter Property="Background" Value="#27AE60"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding State}" Value="Stopped">
                                                    <Setter Property="Background" Value="Red"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding State}" Value="Error">
                                                    <Setter Property="Background" Value="#E74C3C"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <TextBlock Text="{Binding State}" Foreground="White" FontSize="11" FontWeight="SemiBold"/>
                                </Border>

                                <!-- Toggle Switch -->
                                <mah:ToggleSwitch Grid.Column="2" Grid.Row="1"
                                                OnContent="ON" OffContent="OFF"
                                                IsOn="{Binding IsEnabled, Mode=TwoWay}"
                                                IsEnabled="{Binding IsControllable}"
                                                Toggled="FeatureToggle_Toggled"
                                                Margin="10,5,0,0"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Status Bar -->
        <Border Grid.Row="3" 
               Padding="10" Margin="0,10,0,0" CornerRadius="3">
            <TextBlock x:Name="StatusText" Text="Ready" FontSize="11"/>
        </Border>
    </Grid>
</mah:MetroWindow>
