<mah:MetroWindow x:Class="NoFences.View.PreferencesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        Title="NoFences - Preferences"
        Height="701"
        Width="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        ShowInTaskbar="True"
        GlowBrush="{DynamicResource MahApps.Brushes.Accent}"
        BorderThickness="1"
        TitleCharacterCasing="Normal">

    <!-- Theme synced with Windows system theme via ControlzEx.Theming.ThemeManager -->

    <mah:MetroWindow.Resources>
        <!-- Subtle color brushes -->
        <SolidColorBrush x:Key="SubtleHeaderBrush" Color="#FF607D8B"/>
        <SolidColorBrush x:Key="SubtleBorderBrush" Color="#FFCFD8DC"/>

        <!-- Value converter for uppercase text -->
        <mah:ToUpperConverter x:Key="ToUpperConverter"/>

        <!-- Elegant GroupBox style - subtle and professional -->
        <Style x:Key="ElegantGroupBox" TargetType="GroupBox">
            <Setter Property="Foreground" Value="{StaticResource SubtleHeaderBrush}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="BorderBrush" Value="{StaticResource SubtleBorderBrush}"/>
            <Setter Property="BorderThickness" Value="0,1,0,0"/>
            <Setter Property="Padding" Value="0,8,0,0"/>
            <Setter Property="HeaderTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <TextBlock Text="{Binding Converter={StaticResource ToUpperConverter}}"
                                   Foreground="{StaticResource SubtleHeaderBrush}"
                                   FontSize="11"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,4"
                                   Opacity="0.7"/>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GroupBox">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Header -->
                            <ContentPresenter Grid.Row="0"
                                            ContentSource="Header"
                                            Margin="0,0,0,8"/>

                            <!-- Top border line -->
                            <Border Grid.Row="0"
                                    Height="1"
                                    VerticalAlignment="Top"
                                    Background="{TemplateBinding BorderBrush}"
                                    Opacity="0.3"/>

                            <!-- Content -->
                            <ContentPresenter Grid.Row="1"
                                            Margin="{TemplateBinding Padding}"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </mah:MetroWindow.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
            <iconPacks:PackIconMaterial x:Name="HeaderIcon"
                                       Kind="Cog"
                                       Width="32"
                                       Height="32"
                                       VerticalAlignment="Center"
                                       Margin="0,0,15,0" />
            <TextBlock Text="Preferences"
                      FontSize="24"
                      FontWeight="Bold"
                      VerticalAlignment="Center" />
        </StackPanel>

        <!-- Settings Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Auto-Update Settings -->
                <GroupBox Header="Auto-Update" Style="{StaticResource ElegantGroupBox}">
                    <StackPanel>
                        <!-- Enable Auto-Check -->
                        <CheckBox x:Name="AutoCheckUpdatesCheckBox"
                                 Content="Automatically check for updates"
                                 Margin="0,0,0,15"
                                 Checked="AutoCheckUpdatesCheckBox_Changed"
                                 Unchecked="AutoCheckUpdatesCheckBox_Changed" />

                        <!-- Check Frequency -->
                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="Check for updates every:"
                                      Margin="0,0,0,5" />
                            <StackPanel Orientation="Horizontal">
                                <mah:NumericUpDown x:Name="CheckFrequencyUpDown"
                                                  Width="100"
                                                  Minimum="1"
                                                  Maximum="168"
                                                  Value="24"
                                                  HorizontalAlignment="Left"
                                                  Interval="1" />
                                <TextBlock Text="hours"
                                          Margin="10,0,0,0"
                                          VerticalAlignment="Center" />
                            </StackPanel>
                            <TextBlock Text="(1 hour to 7 days)"
                                      Opacity="0.6"
                                      FontSize="11"
                                      Margin="0,5,0,0" />
                        </StackPanel>

                        <!-- Auto-Download (future feature) -->
                        <CheckBox x:Name="AutoDownloadUpdatesCheckBox"
                                 Content="Automatically download updates (not yet implemented)"
                                 IsEnabled="False"
                                 Opacity="0.5"
                                 Margin="0,0,0,10" />

                        <!-- Last Check Info -->
                        <Border CornerRadius="5"
                               Padding="10"
                               Margin="0,10,0,0">
                            <StackPanel>
                                <TextBlock Text="Update Status"
                                          FontWeight="SemiBold"
                                          Margin="0,0,0,5" />
                                <TextBlock x:Name="LastCheckText"
                                          Text="Last check: Never"
                                          Opacity="0.8"
                                          FontSize="12" />
                                <TextBlock x:Name="SkippedVersionText"
                                          Text="Skipped version: None"
                                          Opacity="0.8"
                                          FontSize="12"
                                          Margin="0,3,0,0" />
                                <Button x:Name="CheckNowButton"
                                       Content="Check Now"
                                       Width="120"
                                       Height="30"
                                       Margin="0,10,0,0"
                                       HorizontalAlignment="Left"
                                       Click="CheckNowButton_Click" />
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </GroupBox>

                <!-- API Keys -->
                <GroupBox Header="API Keys" Style="{StaticResource ElegantGroupBox}">
                    <StackPanel>
                        <!-- RAWG API Key -->
                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="RAWG API Key"
                                      Margin="0,0,0,5" />
                            <TextBox x:Name="RawgApiKeyTextBox"
                                    Width="400"
                                    HorizontalAlignment="Left"
                                    mah:TextBoxHelper.Watermark="Enter your RAWG API key (optional)" />
                            <TextBlock Text="Used for game metadata enrichment. Get your free API key at: https://rawg.io/apidocs"
                                      Opacity="0.6"
                                      FontSize="11"
                                      TextWrapping="Wrap"
                                      Margin="0,5,0,0" />
                        </StackPanel>

                        <!-- Info -->
                        <Border CornerRadius="5"
                               Background="{DynamicResource MahApps.Brushes.Accent4}"
                               Padding="10"
                               Margin="0,10,0,0">
                            <StackPanel Orientation="Horizontal">
                                <iconPacks:PackIconMaterial Kind="InformationOutline"
                                                           Width="16"
                                                           Height="16"
                                                           VerticalAlignment="Top"
                                                           Margin="0,2,10,0"
                                                           Opacity="0.8" />
                                <TextBlock TextWrapping="Wrap"
                                          Opacity="0.8"
                                          FontSize="12" Width="504">
                                    <Run Text="API keys are optional. NoFences can automatically enrich software and game metadata using these services. Without keys, basic metadata will still be collected from local sources." />
                                </TextBlock>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </GroupBox>

                <!-- General Settings -->
                <GroupBox Header="General" Style="{StaticResource ElegantGroupBox}">
                    <StackPanel>
                        <!-- Welcome Tips -->
                        <CheckBox x:Name="ShowWelcomeTipsCheckBox"
                                 Content="Show welcome tips for new fences"
                                 Margin="0,0,0,10" />

                        <!-- Fence Count Info -->
                        <Border CornerRadius="5"
                               Padding="10">
                            <StackPanel>
                                <TextBlock Text="Statistics"
                                          FontWeight="SemiBold"
                                          Margin="0,0,0,5" />
                                <TextBlock x:Name="FenceCountText"
                                          Text="Fences created: 0"
                                          Opacity="0.8"
                                          FontSize="12" />
                                <TextBlock x:Name="FirstRunText"
                                          Text="First run: Unknown"
                                          Opacity="0.8"
                                          FontSize="12"
                                          Margin="0,3,0,0" />
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </GroupBox>

                <!-- About -->
                <GroupBox Header="About" Style="{StaticResource ElegantGroupBox}">
                    <StackPanel>
                        <TextBlock Text="NoFences - Desktop Organization"
                                  FontSize="14"
                                  FontWeight="SemiBold"
                                  Margin="0,0,0,5" />
                        <TextBlock x:Name="VersionText"
                                  Text="Version: 1.6.0.0"
                                  Opacity="0.8"
                                  Margin="0,0,0,10" />
                        <TextBlock Text="A powerful desktop fence organizer for Windows."
                                  TextWrapping="Wrap"
                                  Opacity="0.8"
                                  Margin="0,0,0,10" />
                        <Button x:Name="GitHubButton"
                               Width="180"
                               Height="30"
                               HorizontalAlignment="Left"
                               Click="GitHubButton_Click">
                            <StackPanel Orientation="Horizontal">
                                <iconPacks:PackIconMaterial Kind="Github"
                                                           Width="16"
                                                           Height="16"
                                                           VerticalAlignment="Center"
                                                           Margin="0,0,5,0" />
                                <TextBlock Text="View on GitHub"
                                          VerticalAlignment="Center" />
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>

        <!-- Action Buttons -->
        <Grid Grid.Row="2" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Button Grid.Column="1"
                    x:Name="SaveButton"
                    Content="Save"
                    Width="100"
                    Height="35"
                    Margin="0,0,10,0"
                    Click="SaveButton_Click" />

            <Button Grid.Column="2"
                    x:Name="CancelButton"
                    Content="Cancel"
                    Width="100"
                    Height="35"
                    Click="CancelButton_Click" />
        </Grid>
    </Grid>
</mah:MetroWindow>
